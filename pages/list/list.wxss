.list{
    padding:44rpx 21rpx;
    box-sizing:border-box;
}
.item{
    margin-bottom:20rpx;
}
.item:last-child{
    margin-bottom:0;
}
.item-image{
    width:100%;
    height:331rpx;
    padding:20rpx;
    box-sizing:border-box;
    background:#d5d3d3;
    border-radius:20rpx 20rpx 1rpx 1rpx;
}

.item-image image{
    width:100%;
    height:100%;
}
.item-title{
    /* width:581rpx; */
    height:74rpx;
    position: relative;
    flex:1;
}
.item-block{
    display:flex;
    justify-content:space-between;
    margin-top:8rpx;
}
.item-title-text{
    position: absolute;
    height:100%;
    padding-left:30rpx;
    font-size:30rpx;
    width:100%;
    display:flex;
    align-items:center; 
    z-index:99; 
}
.item-back{
    width:84rpx;
    height:74rpx;
}
.item-back image{
    width:100%;
    height:100%;
}
.item-title image{
    position: absolute;
    top:0;
    left:0;
    width:100%;
    height:100%;
}